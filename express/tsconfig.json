{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
